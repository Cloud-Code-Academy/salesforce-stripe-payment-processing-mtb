# Environment Configuration
ENVIRONMENT=development

# Application Settings
APP_NAME=Salesforce-Stripe Middleware
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# FastAPI Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Stripe Configuration
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret_here
STRIPE_API_VERSION=2024-10-28

# Salesforce OAuth Configuration
SALESFORCE_CLIENT_ID=your_connected_app_client_id
SALESFORCE_CLIENT_SECRET=your_connected_app_client_secret
SALESFORCE_USERNAME=integration.user@yourorg.com
SALESFORCE_PASSWORD=your_password_here
SALESFORCE_SECURITY_TOKEN=your_security_token_here
SALESFORCE_INSTANCE_URL=https://login.salesforce.com
SALESFORCE_API_VERSION=v63.0

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS SQS Configuration
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/stripe-webhook-events
SQS_QUEUE_NAME=stripe-webhook-events
SQS_VISIBILITY_TIMEOUT=300
SQS_MAX_MESSAGES=10
SQS_WAIT_TIME_SECONDS=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_TOKEN_TTL=3600

# AWS Secrets Manager (Production)
USE_SECRETS_MANAGER=false
SECRETS_MANAGER_SECRET_NAME=salesforce-stripe-middleware/prod

# Retry Configuration
MAX_RETRY_ATTEMPTS=5
RETRY_BACKOFF_BASE=2
RETRY_BACKOFF_MAX=32

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_CALLS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST"]
CORS_ALLOW_HEADERS=["*"]
